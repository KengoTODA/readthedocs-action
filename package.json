{
  "name": "rtd-bot",
  "version": "0.8.0",
  "description": "An unofficial GitHub Probot that helps reveiwing on Read the Docs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "tsc && probot run ./lib/index.js",
    "pretest": "tslint -p tsconfig.json",
    "travis-deploy-once": "travis-deploy-once --pro",
    "semantic-release": "semantic-release",
    "test": "TS_NODE_FILES=true nyc mocha",
    "prepack": "tsc"
  },
  "keywords": [
    "probot",
    "readthedocs",
    "rtd"
  ],
  "author": "Kengo TODA",
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/rest": "^16.17.1",
    "dotenv": "^8.0.0",
    "node-fetch": "^2.2.0",
    "probot": "^9.0.0",
    "probot-actions-adapter": "^1.0.2",
    "promise-retry": "^1.1.1",
    "puppeteer": "^2.0.0",
    "typescript": "^3.0.3"
  },
  "engines": {
    "node": "^12.12"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.0",
    "@types/bunyan": "^1.8.4",
    "@types/express": "^4.16.0",
    "@types/node-fetch": "^2.1.2",
    "@types/promise-retry": "^1.1.2",
    "@types/puppeteer": "^1.6.2",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.0.1",
    "mocha": "^7.0.0",
    "mocha-assume": "^1.0.0",
    "nyc": "^15.0.0",
    "semantic-release": "^17.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KengoTODA/rtd-bot.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
  },
  "publishConfig": {
    "access": "public"
  },
  "mocha": {
    "extension": "js",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": "src",
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "heroku-run-build-script": true
}
