{
  "name": "rtd-bot",
  "version": "0.0.0-development",
  "description": "An unofficial GitHub Probot that helps reveiwing on Read the Docs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build:action": "ncc build src/action.ts --out action",
    "start": "probot run ./lib/index.js",
    "semantic-release": "semantic-release",
    "test": "cross-env TS_NODE_FILES=true nyc mocha",
    "postinstall": "npm run-script prepack",
    "prepack": "tsc"
  },
  "keywords": [
    "probot",
    "readthedocs",
    "rtd"
  ],
  "author": "Kengo TODA",
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/rest": "^18.0.0",
    "dotenv": "^8.0.0",
    "node-fetch": "^2.2.0",
    "probot": "^10.7.1",
    "probot-actions-adapter": "^2.0.0"
  },
  "engines": {
    "node": "^12.12"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/express": "^4.16.0",
    "@types/node-fetch": "^2.1.2",
    "@zeit/ncc": "^0.22.3",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "^3.0.1",
    "husky": "^4.2.5",
    "mocha": "^8.0.0",
    "mocha-assume": "^1.0.0",
    "nyc": "^15.0.0",
    "semantic-release": "^17.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KengoTODA/rtd-bot.git"
  },
  "release": {},
  "publishConfig": {
    "access": "public"
  },
  "mocha": {
    "extension": "js",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": "src",
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "heroku-run-build-script": true,
  "husky": {
    "hooks": {
      "pre-commit": "npm run build:action && git add action"
    }
  }
}
