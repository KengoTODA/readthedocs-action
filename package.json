{
  "name": "rtd-bot",
  "version": "0.5.2",
  "description": "An unofficial GitHub Probot that helps reveiwing on Read the Docs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "probot run ./lib/index.js",
    "pretest": "tslint -p tsconfig.json",
    "test": "mocha",
    "postinstall": "npm run build",
    "travis-deploy-once": "travis-deploy-once --pro",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "probot",
    "readthedocs",
    "rtd"
  ],
  "author": "Kengo TODA",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/node-fetch": "^2.1.2",
    "@types/promise-retry": "^1.1.2",
    "@types/puppeteer": "^1.6.2",
    "dotenv": "^6.0.0",
    "node-fetch": "^2.2.0",
    "probot": "^7.1.0",
    "promise-retry": "^1.1.1",
    "puppeteer": "^1.7.0",
    "typescript": "^3.0.3"
  },
  "engines": {
    "node": "^8.11",
    "npm": "^5.6"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.3",
    "@semantic-release/npm": "^5.0.4",
    "commitizen": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "^5.2.0",
    "mocha-assume": "^1.0.0",
    "semantic-release": "^15.9.12",
    "travis-deploy-once": "^5.0.7",
    "tslint": "^5.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KengoTODA/rtd-bot.git"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
